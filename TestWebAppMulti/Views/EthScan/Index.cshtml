@model DevTestModel.Models.ScanModels.EthScanModelOne

<h1>
    Get "Internal Transactions" by Block Range
</h1>

<p>ModelStatus: @Model.Status.ToString() </p>
<p>ModelMessageJSON: @Model.Message.ToString() </p>
<p>primjer bloka: 13481773 - 13491773, Resoult = .Take(1000)</p>
<br />
<form method="post" asp-action="Index">
    <label for="startBlock">Start Block:</label>
    <input value="13481773" type="text" name="startBlock" required />
    <br />
    <label for="endBlock">End Block:</label>
    <input value="13481773" type="text" name="endBlock" required />
    <br />
    <button class="btn btn-success" type="submit">Submit</button>
    <br />
</form>
<br />
<div>
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Back to Index</a>
</div>
<br />

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Transaction Data</h5>
        <table class="table table-striped table-bordered table-responsive-md">
            <thead class="thead-dark">
                <tr>
                    <th>Block Number</th>
                    <th>Timestamp</th>
                    @*            
                    <th>Hash</th>
                    *@
                    <th>From</th>
                    <th>To</th>
                    <th>Value</th>
                   @*<th>Contract Address</th>*@
                    @*<th>Input</th>*@
                    <th>Type</th>
                    @*
                    <th>Gas</th>
                    <th>Gas Used</th>
                    <th>Trace ID</th>
                    *@
                    @*<th>Is Error</th>*@
                    @*<th>Error Code</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model.Result.Take(1000))  @*kod filtera???*@
                {
                    <tr>
                        <td>@transaction.BlockNumber</td>
                        <td>@transaction.TimeStamp</td>
                        @*                
                        <td>@transaction.Hash</td>
                        *@
                        <td>@transaction.From</td>
                        <td>@transaction.To</td>
                        <td>@transaction.Value</td>
                        @*<td>@transaction.ContractAddress</td>*@
                        @*<td>@transaction.Input</td>*@
                        <td>@transaction.Type</td>
                        @*
                        <td>@transaction.Gas</td>
                        <td>@transaction.GasUsed</td>
                        <td>@transaction.TraceId</td>
                        *@
                        @*<td>@transaction.IsError</td>*@
                        @*<td>@transaction.ErrCode</td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Transaction Data</h5>
        <table class="table table-striped table-bordered table-sm">
            <thead class="thead-dark">
                <tr>
                    <th>Block Number</th>
                    <th>Timestamp</th>
                    <th>Contract Address</th>
                    <th>Input</th>
                    <th>Type</th>
                    <th>Is Error</th>
                    @*<th>Error Code</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model.Result)  @*kod filtera???*@
                {
                    if (!string.IsNullOrEmpty(transaction.ContractAddress))
                    {
                        <tr>
                            <td>@transaction.BlockNumber</td>
                            <td>@transaction.TimeStamp</td>
                            <td>@transaction.ContractAddress</td>
                            <td>@transaction.Input</td>
                            <td>@transaction.Type</td>
                            <td>@transaction.IsError</td>
                            @*<td>@transaction.ErrCode</td>*@
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<footer>
    <p>####################################################</p>
</footer>
