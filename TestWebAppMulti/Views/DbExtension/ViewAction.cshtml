@using DevTestModel.Models;
@model IEnumerable<NewsArticleModel>

<body>
    <h2>Info Tables</h2>
    <br />
    <div class="container mt-5 small">
        <div class="card mt-4">
            <div class="card-body small">
                <h5 class="card-title">Summary</h5>
                <div class="table-responsive">
                    <table class="table table-bordered table-sm">
                        <tbody>
                            <tr>
                                <td>Records in CountNewsArticle</td>
                                <td>@ViewBag.CountNewsArticle</td>
                            </tr>
                            <tr>
                                <td>Records in CountDataHistoryArticle</td>
                                <td>@ViewBag.CountDataHistoryArticle</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="container mt-5">
        <div class="card mt-4">
            <div class="card-body small">
                <h5 class="card-title">Actions</h5>
                <div class="table-responsive">
                    <table class="table table-bordered table-sm">
                        <tbody>
                            <tr>
                                <td>
                                    <form asp-controller="CryptoArticle" asp-action="SaveArticle" method="post">
                                        <button type="submit" class="btn btn-success btn-block"><strong>SaveArticleAll</strong></button>
                                    </form>
                                </td>
                            </tr>
                        <td>
                            <form asp-controller="CryptoArticle" asp-action="InsertSourceTableData" method="post">
                                <button type="submit" class="btn btn-outline-primary btn-block"><strong>SaveDataToSrcTable</strong></button>
                            </form>
                        </td>
                            <tr>
                                <td>
                                <form asp-controller="CryptoArticle" asp-action="JustSaveNewArticle" method="post">
                                        <button type="submit" class="btn btn-secondary btn-block"><strong>JustSave(NEW)Articles</strong></button>
                                    </form>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-block">Back to Menu</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br />
</body>