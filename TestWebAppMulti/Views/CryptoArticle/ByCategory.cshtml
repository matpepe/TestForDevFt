@using DevTestModel.Models;
@model IEnumerable<DataHistoryArticle>
<head>
    <title>Crypto News Form</title>
    <div>
        <script src="~/js/translation.js"></script>
        <script src="~/js/saveArticleButtonScript.js"></script>
        <script src="~/js/ScroolButtonScript.js"></script>
        <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        <link rel="stylesheet" href="https://bootswatch.com/5/spacelab/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/ByCategorySite.css" asp-append-version="true" />
    </div>
</head>
<body>
    <div class="background-image">
        <div class="content-container">
            <div class="title-bar align-content-center">
                <h1 style="color: #fff;">Crypto News Form</h1>
            </div>
            <div class="container mt-4">
                <h5 class="text-start" style="color: #fff;">Actions</h5>
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body transparent-card-body">
                                <h5 class="card-title">Filter by Category</h5>
                                <form method="get" action="@Url.Action("ByCategory", "CryptoArticle")">
                                    <div class="form-group">
                                        <label for="categoryDropdown">Select Category:</label>
                                        @Html.DropDownList("selectedCategory", (SelectList)ViewBag.Categories, "All Categories", new { id = "categoryDropdown", @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        <label for="categoryFilter">Filter by Category:</label>
                                        <input type="text" name="categoryFilter" id="categoryFilter" class="form-control" />
                                    </div>
                                    <br />
                                    <div class="col">
                                        <button type="submit" class="btn btn-primary small">Filter</button>
                                    </div>
                                    <br />
                                    <div class="col">
                                        <button class="btn btn-dark small" type="reset" value="null">Clear</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <div id="google_translate_element"></div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <br />
                        <br />
                        <div class="card small">
                            <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Home" asp-action="Index">Back To Menu</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
            @foreach (var article in Model)
            {
                <div class="card mb-3 transparent-card-body">
                    <div class="row g-0">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(article.ImageUrl))
                            {
                                <div class="card-img-top overflow-hidden border-primary">
                                    <a href="@article.ImageUrl" target="_blank" rel="noopener noreferrer">
                                        <img src="@article.ImageUrl" class="img-fluid rounded-start" alt="Image" />
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="placeholder-image"></div>
                            }
                        </div>
                        <div class="col-md-8">
                            <div class="card-body" style="color: black">
                                <h5 class="card-title">@article.Title</h5>
                                <p class="card-text">@article.Body</p>
                                <p class="card-text"><small class="text-muted">Published on: @article.DateAndTimeInserted.ToString()</small></p>
                                <p>image Source: @article.ImageUrl </p>
                                <p>Upvotes: @article.Upvotes.ToString()</p>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
        <br />
        <div class="LAST">
            <div class="text-center">
                <a href="#top" id="back-to-top" class="btn btn-dark back-to-top">Back to Top</a>
                <br />
                <br />
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">BackToIndex</a>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <br />
</body>

